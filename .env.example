# HR Automation System - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ====================
# CRITICAL SECURITY SETTINGS
# ====================

# Generate strong secrets using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SIGNING_SECRET=REPLACE_WITH_RANDOM_STRING_32_CHARS_MIN
SECRET_KEY=REPLACE_WITH_RANDOM_STRING_32_CHARS_MIN

# ====================
# APPLICATION SETTINGS
# ====================

APP_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173
ENVIRONMENT=development
DEBUG=False
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ====================
# DATABASE CONFIGURATION
# ====================

DATABASE_URL=postgresql+psycopg2://postgres:YOUR_DB_PASSWORD@localhost:5432/appdb
DATABASE_TIMEOUT=30

# ====================
# EMAIL SMTP CONFIGURATION
# ====================

SMTP_HOST=smtp.qiye.aliyun.com
SMTP_PORT=465
SMTP_USER=your-email@51talk.com
SMTP_PASS=YOUR_SMTP_PASSWORD_HERE
SMTP_FROM_EMAIL=noreply@51talk.com
SMTP_FROM_NAME=HR Automation System
SMTP_USE_TLS=True
SMTP_TIMEOUT=10.0
SMTP_SOCKET_TIMEOUT=10.0

# ====================
# EMAIL RECIPIENTS
# ====================

# Use different emails to avoid self-sending issues
HR_EMAIL=hr@51talk.com
IT_EMAIL=it@51talk.com
IT_SUPPORT_EMAIL=it-support@51talk.com

# ====================
# REMINDER SYSTEM
# ====================

ENABLE_AUTO_REMINDERS=True
REMINDER_THRESHOLD_HOURS=24
REMINDER_CHECK_INTERVAL_MINUTES=60

# ====================
# TIMEOUT CONFIGURATIONS
# ====================

HTTP_TIMEOUT=30.0
APPROVAL_PAGE_TIMEOUT=15.0

# ====================
# IMAP CONFIGURATION (Optional)
# ====================

IMAP_HOST=imap.qiye.aliyun.com
IMAP_PORT=993
